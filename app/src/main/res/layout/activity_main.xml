<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.kevincheng.widget.RadioGroup
        android:id="@+id/rg_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewGroup_greenCircle"
        app:rc_radius="8dp">

        <com.kevincheng.widget.RadioButton
            android:id="@+id/rb_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rb_value="@string/lang_en">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lang_en"
                android:textColor="#FFFFFF"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kevincheng.widget.StatefulTintColorImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:duplicateParentState="true"
                android:src="@drawable/ic_enter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_en"
                app:stciv_tint="@color/radio_button_icon" />

        </com.kevincheng.widget.RadioButton>

        <com.kevincheng.widget.RadioButton
            android:id="@+id/rb_hk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rb_value="@string/lang_hk">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_hk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lang_hk"
                android:textColor="#FFFFFF"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kevincheng.widget.StatefulTintColorImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:duplicateParentState="true"
                android:src="@drawable/ic_enter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_hk"
                app:stciv_tint="@color/radio_button_icon" />

        </com.kevincheng.widget.RadioButton>

        <com.kevincheng.widget.RadioButton
            android:id="@+id/rb_es"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rb_value="@string/lang_es">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_es"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lang_es"
                android:textColor="#FFFFFF"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kevincheng.widget.StatefulTintColorImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:duplicateParentState="true"
                android:src="@drawable/ic_enter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_es"
                app:stciv_tint="@color/radio_button_icon" />

        </com.kevincheng.widget.RadioButton>

    </com.kevincheng.widget.RadioGroup>

    <com.kevincheng.widget.RoundedFrameLayout
        android:id="@+id/viewGroup_greenCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rc_radius="40dp">

        <TextView
            android:id="@+id/textView_hello"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/hello" />
    </com.kevincheng.widget.RoundedFrameLayout>

    <com.kevincheng.widget.TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>