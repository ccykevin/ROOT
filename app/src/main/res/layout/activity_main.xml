<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.kevincheng.widget.RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewGroup_greenCircle"
        app:rg_checkedButton="@id/rb_1"
        app:rg_cornerRadius="8dp">

        <com.kevincheng.widget.RadioButton
            android:id="@+id/rb_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:rb_value="1">

            <com.kevincheng.widget.StatefulTintColorImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:src="@drawable/ic_enter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:stciv_tint="@color/radio_button_icon" />

        </com.kevincheng.widget.RadioButton>

        <com.kevincheng.widget.RadioButton
            android:id="@+id/rb_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:rb_value="2">

            <com.kevincheng.widget.StatefulTintColorImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:src="@drawable/ic_enter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:stciv_tint="@color/radio_button_icon" />

        </com.kevincheng.widget.RadioButton>

        <com.kevincheng.widget.RadioButton
            android:id="@+id/rb_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:rb_value="3">

            <com.kevincheng.widget.StatefulTintColorImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:src="@drawable/ic_enter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:stciv_tint="@color/radio_button_icon" />

        </com.kevincheng.widget.RadioButton>

    </com.kevincheng.widget.RadioGroup>

    <com.kevincheng.widget.RoundedFrameLayout
        android:id="@+id/viewGroup_greenCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rc_radius="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hello World!" />
    </com.kevincheng.widget.RoundedFrameLayout>

    <com.kevincheng.widget.TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>